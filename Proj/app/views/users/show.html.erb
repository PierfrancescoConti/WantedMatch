<div class='container' align='center'>
  <p id="notice"><%= notice %></p>



  <p>


    <% if User.find(session[:user_id])!=@user && User.find(session[:user_id])[:teams].include?(@user.usname)%>
      <%= form_tag action: 'remove_team1', controller: 'users' do %>
          <%= submit_tag 'Remove team', class: 'btn btn-default', style: 'background-color: red; margin-left: 10px; color: white;'%> <%= text_field_tag :usname, nil, class: 'hidden', value: @user.usname %>  <!-- CERCA UTENTI -->
      <% end %>

    <% else %>
      <% if User.find(session[:user_id])!=@user %>
        <%= form_tag action: 'add_team', controller: 'users' do %>
          <%= submit_tag 'Add team', class: 'btn btn-default' %> <%= text_field_tag :usname, nil, class: 'hidden', value: @user.usname %>  <!-- CERCA UTENTI -->
        <% end %>
      <% end %>
    <% end %>


</p>

<p>
  <strong>Usname:</strong>
  <%= @user.usname %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Teams:</strong>
  <div class='box'>

    <% Team.all.each do |element| %>

    <h3 style="margin-top: 3px;">
      <% if User.find(session[:user_id])[:usname]==element[:captain] %>
      <td><%= element[:name] %><%= link_to 'Show', Team.find(element.id), class: 'btn btn-default', style: 'background-color: blue; margin-left: 10px; color: white;'%>
    </td>
    <% end %>

    </h3>
    <% end %>
  </div>
</p>
  <% if User.find(session[:user_id])==@user %>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
  <% end %>
</div>
