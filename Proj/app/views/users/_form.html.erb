<div class="container pnl">
      <div class="py-5 text-center">
        <h2>Form</h2>
        <hr>
      </div>
      <div  align="center">
      <% flash.each do |key, value| %>
          <div class="isa_error" style="border-left-style: solid; border-right-style: solid; border-color: #E52B50;">
            <b style="margin-left: -20px;">→ <%= value %></b>
          </div>
      <% end %>
      </div><br>
      <br>

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">

        </div>
        <div class="col-md-8 order-md-1" style="margin-left: 18%">
          <%= form_with(model: user, local: true) do |form| %>
            <% if user.errors.any? %>
              <div id="error_explanation">
                <h2>Prohibited this user from being saved:</h2>

                <ul>
                <li>Password complexity:</li>
                <td><td>- Must contain 8 or more characters</td></td><br>
                <td><td>- Must contain a lower or upper case character</td></td><br>
                <td><td>- Must contain a number</td></td><br>
                <br>
                <li>Email format:</li>
                <td><td> pippo89@example.com</td></td><br>

                </ul>
              </div>
            <% end %>

<div class="container pnl" align="center">
  <br>
            <div class="mb-3">
              <%= form.label :usname, class: 'h3' %>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">@</span>
                </div>
              <%= form.text_field :usname, required: true, id: :user_usname, :class => 'form-control', placeholder: "Username" %>
            </div>
            <br>

            <div class="mb-3">
              <%= form.label :email, class: 'h3'  %>
              <%= form.text_field :email, required: true, id: :user_email, :class => 'form-control', placeholder: "pippo89@example.com"  %>
            </div>
            <br>

            <div class="mb-3">
              <%= form.label :password, class: 'h3'  %>
              <%= form.password_field :password, id: :user_password, :class => 'form-control', placeholder: "Password"  %>
            </div>
            <br>

            <div class="mb-3">
              <%= form.label :password_confirmation, class: 'h3'  %>
              <%= form.password_field :password_confirmation, id: :user_password_confirmation, :class => 'form-control', placeholder: "Confirm Password"  %>
            </div>
            <br>

               <hr class="mb-4">

            <div class="actions">
              <p>
                <%= form.submit('Continue',{:class => 'btn btn-register btn-primary btn-lg btn-block '}) %><br>
              </p>
            </div>
          <% end %>
          <br>
          <p class="mt-5 mb-3 text-muted text-center"><b style="color: white;">© 2017-2018</b></p>
          <hr>

            </div>
            </div>

</div>
