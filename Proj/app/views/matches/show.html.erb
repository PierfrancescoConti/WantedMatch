<p id="notice"><%= notice %></p>
<h3 align="center">
<p>
  <strong>Location:</strong>
  <%= @match.location %>
</p>
<br>
<p>
  <strong>Time:</strong>
  <%= @match.time %>
</p>
<br>
<p>
  <strong>Date:</strong>
  <%= @match.date %>
</p>
<br>
<p>
  <strong>Team1:</strong>
  <%= image_tag(Team.find(@match.team1).logo.to_s, style: 'height: 50px; width: 50px; margin-right: 10px;')%> <%= Team.find(@match.team1)[:name] %>
</p>
<br>
<p>
  <strong>Team2:</strong>
  <% if @match.team2==nil %>
    <b> Cercasi Team sfidante </b><br><br>

    <div class="popup" onclick="popup()"><button class="pic-btn"> Scegli Team </button>
  <span class="popuptext" id="myPopup">Questi sono i tuoi Teams!
    <div class="scatola" align="center">
    <table>
      <% Team.all.each do |element| %>

        <h3 style="margin-top: 3px;">
        <% if User.find(session[:user_id])[:usname]==element[:captain] %>

          <tr><%= element[:name] %><%= link_to 'Show', Team.find(element.id), class: 'btn btn-default', style: 'background-color: blue;  color: white; position: absolute; right: 103px;'%>
            <%= form_tag action: 'select_team', controller: 'matches' do %>
            		<%= submit_tag 'Choose', class: 'btn btn-default', style: 'position: absolute; right: 3px; background-color: green; color: white;' %>
                <%= text_field_tag :idteam, nil, class: 'hidden', value: element.id %>
                <%= text_field_tag :idmatch, nil, class: 'hidden', value: @match.id %>
            <% end %>

          </tr>
        <% end %>

        </h3>
      <% end %>
    </table>
    </div>
  </span>
</div>
<label id="mess"> </label><br>

    <%= form_tag action: 'elimina_match', controller: 'matches' do %>
    		<%= submit_tag 'Elimina', class: 'btn btn-default', style: 'background-color: red; margin-left: 10px; color: white;'%> <%= text_field_tag :idmatch, nil, class: 'hidden', value: @match.id %>  <!-- CERCA UTENTI -->
    <% end %>

  <% else %>
    <%= image_tag(Team.find(@match.team2).logo.to_s, style: 'height: 50px; width: 50px; margin-right: 10px;')%> <%= Team.find(@match.team2)[:name] %>
  <% end %>
</p>
<br>
</h3>
